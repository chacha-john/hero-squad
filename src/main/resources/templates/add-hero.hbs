{{#partial "content"}}
    <form action="/hero/new" method="post">
        <label for="heroName">Enter hero name</label>
        <input name="heroName" id="heroName" type="text" required>
        <label for="heroAge">Enter hero's age</label>
        <input name="heroAge" id="heroAge" type="number" required>
        <label for="heroPower">Enter the hero's superpower</label>
        <input name="heroPower" id="heroPower" type="text" required>
        <label for="heroWeakness">Enter the hero's superpower</label>
        <input name="heroWeakness" id="heroWeakness" type="text" required>
        <button type="submit">Add Hero</button>
    </form>
{{/partial}}

